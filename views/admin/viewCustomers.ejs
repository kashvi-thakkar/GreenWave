<head>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <link
    href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css"
    rel="stylesheet"
  />
  <style>
    @import url("https://fonts.googleapis.com/css2?family=Merriweather:ital,wght@0,300;0,400;0,700;0,900;1,300;1,400;1,700;1,900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap");
    body {
      font-family: "Merriweather", serif;
    }
  </style>
</head>
<body>
  <header class="header-section light-card">
    <div class="container">
      <h1>View Customers</h1>
      <p class="lead">Manage and review all customer accounts</p>
    </div>
  </header>

  <section class="customers-section light-card">
    <div class="container">
      <h2 class="mb-4">All Customers</h2>

      <div class="table-container">
        <table class="table table-striped">
          <thead>
            <tr>
              <th class="text-white">Name</th>
              <th class="text-white">Email</th>
              <th class="text-white">Registration Date</th>
              <th class="text-white">Admin Status</th>
            </tr>
          </thead>
          <tbody>
            <% customers.forEach(customer => { %>
            <tr>
              <td><%= customer.firstName %> <%= customer.lastName %></td>
              <td><%= customer.email %></td>
              <td><%= customer.createdAt.toLocaleDateString() %></td>
              <td><%= customer.isAdmin ? 'Admin' : 'User' %></td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>

      <a href="/admin/dashboard" class="btn btn-outline-success mt-4"
        >Back to Dashboard</a
      >
    </div>
  </section>
</body>
