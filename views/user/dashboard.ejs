<header class="header-section">
  <div class="container text-center">
    <h1 class="mb-2">Eco-Friendly Products</h1>
    <p class="subtitle">
      Explore our range of sustainable products designed to reduce your carbon
      footprint
    </p>
  </div>
</header>

<main class="container my-5">
  <div class="row row-cols-1 row-cols-md-3 g-4 mb-5">
    <% function truncateText(text, maxLength) { return text.length > maxLength ?
    text.substr(0, maxLength) + '...' : text; } %> <%
    products.forEach(function(product) { %>
    <div class="col">
      <div class="product-card">
        <div class="product-img-wrapper">
          <img
            src="<%= product.imageUrl %>"
            class="product-img"
            alt="<%= product.name %>"
          />
        </div>
        <div class="product-body">
          <h3 class="product-title"><%= truncateText(product.name, 30) %></h3>
          <p class="product-description">
            <%= truncateText(product.description, 80) %>
          </p>
          <p class="product-meta">
            <strong>Stock:</strong> <%= product.stock %>
          </p>
          <p class="product-meta">
            <strong>Category:</strong> <%= product.category %>
          </p>
          <p class="product-price">
            â‚¹<%= typeof product.price === 'number' ? product.price.toFixed(2) :
            'N/A' %>
          </p>
          <a
            href="/product/<%= product._id %>"
            class="btn btn-success w-100 mt-2"
            >View Details</a
          >
        </div>
      </div>
    </div>
    <% }); %>
  </div>

  <% if (products.length === 0) { %>
  <p class="mt-3 mb-5">No products available at the moment.</p>
  <% } %>
</main>
