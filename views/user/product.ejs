<div class="container mt-5">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
      <li class="breadcrumb-item active" aria-current="page">
        <%= product.name %>
      </li>
    </ol>
  </nav>

  <div class="row g-5">
    <div class="col-md-6">
      <div class="product-image-card light-card">
        <img
          src="<%= product.imageUrl %>"
          class="product-image img-fluid"
          alt="<%= product.name %>"
        />
      </div>
    </div>
    <div class="col-md-6">
      <div class="product-info light-card">
        <h1 class="display-5 fw-bold mb-4"><%= product.name %></h1>
        <p class="lead mb-4"><%= product.description %></p>
        <hr class="my-4" />
        <div class="d-flex justify-content-between align-items-center mb-3">
          <span class="display-6 product-price"
            >₹<%= product.price.toFixed(2) %></span
          >
          <span
            class="badge stock-badge bg-success-subtle border border-success-subtle text-success-emphasis rounded-pill"
            ><%= product.stock %> in stock</span
          >
        </div>
        <p class="mb-4">
          <strong>Category:</strong>
          <span class="badge category-badge rounded-pill"
            ><%= product.category %></span
          >
        </p>

        <form action="/cart/add/<%= product._id %>" method="POST">
          <div class="input-group mb-3">
            <span class="input-group-text">Quantity</span>
            <input
              type="number"
              class="form-control"
              id="quantity"
              name="quantity"
              value="1"
              min="1"
              max="<%= product.stock %>"
              required
            />
          </div>
          <button
            type="submit"
            class="btn btn-add-to-cart btn-lg w-100 text-white"
          >
            <i class="bi bi-cart-plus me-2"></i>Add to Cart
          </button>
        </form>
      </div>
    </div>
  </div>

  <div class="product-details mt-5 light-card">
    <h2 class="display-6 mb-4">Product Details</h2>
    <div class="table-responsive">
      <table class="table table-striped">
        <tbody>
          <tr>
            <th scope="row">Name</th>
            <td><%= product.name %></td>
          </tr>
          <tr>
            <th scope="row">Category</th>
            <td><%= product.category %></td>
          </tr>
          <tr>
            <th scope="row">Price</th>
            <td>₹<%= product.price.toFixed(2) %></td>
          </tr>
          <tr>
            <th scope="row">Stock</th>
            <td><%= product.stock %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
